[Unit]
After=network.target nss-lookup.target
[Service]
Type=simple
User=root
ExecStart=/root/juicity-folder/juicity run -c /root/juicity-folder/config.json
StandardOutput=file:/root/juicity-folder/juicity-server.log
StandardError=file:/root/juicity-folder/juicity-server.log
Restart=on-failure
LimitNPROC=512
LimitNOFILE=infinity
[Install]
WantedBy=multi-user.target
